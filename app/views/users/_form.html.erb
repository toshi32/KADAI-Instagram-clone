<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_with(model: @user, local: true) do |f| %>
<br><%= f.label :name %><br>
<%= f.text_field :name %>
<br><%= f.label :email %><br>
<%= f.email_field :email %>
<br><%= f.label :profile_image %><br>
<%= f.file_field :image, id: :user_image %>
<%= f.hidden_field :image_cache %>
<br><%= f.check_box :remove_image %>画像を削除
<br><%= f.label :password %>
<br><%= f.password_field :password %>
<br><%= f.label :password_confirmation %>
<br><%= f.password_field :password_confirmation %>
<br><%= f.submit "Create my account" %>
<% end %>